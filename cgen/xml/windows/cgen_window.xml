<root>
	<!-- templates -->
	<template name="cgen_button_genesis">
		<button_text_sm>
			<anchored position="insidetop"/>
			<state textres="cgen_button_genesis" />

			<gmvisibleonly />
				<!-- we pass the text within the input field to our lua script
					which will parse the contents, we will ideally receive an
					object representing the content parsed -->
			<script>
				function onButtonPress()
					local creList, creData, err, errmsg; 
					local cgen_window = Interface.findWindow("cgen_window","cgen");
					local cgen_node = cgen_window.getDatabaseNode();
					if (nil ~= cgen_node) then
						local nodes = cgen_node.getChildren(); 
						local creData = CreatureGen.genesis(nodes["input"].getValue()); 
						cgen_node.createChild('lograw','formattedtext'); 
						local lnode = cgen_node.getChild('lograw');
						lnode.setValue(creData['log']); 
						cgen_node.getChild('log').setValue(''); 

						local logLevel = DB.getValue(cgen_node,'loglevel',''); 
						CreatureGen.dlog('loglevel on creation is ' .. tostring(logLevel)); 
						wc_CreatureGen.processLog(tonumber(logLevel)); 

						if creData.creature.error == true then
							return;
						end
						local npclist = DB.findNode('npc');
						Debug.console(tostring(npclist),self); 
						if npclist then
							creList = npclist.createChild();
						end
						err, errmsg = pcall(CreatureGen.populate,creList,creData); 
						if not err then
							CreatureGen.addError('Error when populating character record: ' .. errmsg); 
							CreatureGen.sendErrors(); 
							CreatureGen.sendWarnings(); 
							creList.delete(); 
						else
							local npcWind = Interface.openWindow("npc",creList);
							local log = CreatureGen.dumpLog(5); 
							lnode.setValue(log);
							wc_CreatureGen.processLog(tonumber(logLevel)); 
						end
					end
				end
			</script>
		</button_text_sm>
	</template>

	<template name="cgen_button_launch">
		<button_text_sm>
			<anchored position="insidetopright" offset="75,2" width="50"/>
			<state textres="cgen_button_launch" />

			<gmvisibleonly />
			<script>
				function onButtonPress()
					Interface.openWindow("cgen_window","cgen"); 
				end
			</script>
		</button_text_sm>
	</template>

	<template name="radio_record_cgen_log_level">
		<buttongroup_radio>
			<anchored to="controlframe" height="20">
				<top offset="8" />
				<left anchor="center" offset="-200" />
			</anchored>
			<parameters>
				<optionwidth>75</optionwidth>
				<labelsres>cgen_label_logmsg|cgen_label_log1|cgen_label_log2|cgen_label_log3|cgen_label_log4|cgen_label_log5</labelsres>
				<values>0|1|2|3|4|5</values>
			</parameters>
			<gmeditonly />
			<script>
				function onValueChanged()
					window.onRadioLogChanged(); 
				end
			</script>
		</buttongroup_radio>
	</template>

	<template name="frame_record_logbar">
		<genericcontrol>
			<anchored>
				<top anchor="bottom" offset="-50" />
				<left offset="15" />
				<right offset="-20" />
				<bottom offset="-15" />
			</anchored>
			<frame name="groupbox" />
			<disabled />
		</genericcontrol>
	</template>


	<!-- windows -->

<!--
	Hack into master index. making this context sensitive would require script injection
-->
	<windowclass name="masterindex">
		<frame>referencelist</frame>
		<placement>
			<size width="450" height="450" />
		</placement>
		<sizelimits>
			<minimum width="450" height="450" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<softclose />
		<nodelete />
		<script file="campaign/scripts/masterindex_window.lua" />
		<sheetdata>
			<windowtitlebar name="reftitle" />
			<anchor_reftitle name="contentanchor" />
			<cgen_button_launch />

			<masterindex_anchor_bottom name="bottomanchor" />

			<hsc name="filter_category" />
			<masterindex_category_label name="label_category" />
			<masterindex_category_filter_label name="filter_category_label" />
			<masterindex_category_list name="list_category" />
			<masterindex_category_scroll name="scroll_category" />
			<masterindex_category_detail name="button_category_detail" />
			<masterindex_category_iedit name="button_category_iedit" />
			<masterindex_category_iadd name="button_category_iadd" />
			
			<masterindex_list name="list" />
			<scrollbar_list />
			
			<genericcontrol name="listbottomanchor">
				<anchored to="list" height="0">
					<left />
					<right />
					<top anchor="bottom" relation="relative" offset="15" />
				</anchored>
			</genericcontrol>

			<masterindex_page_info name="page_info" />
			<masterindex_page_start name="page_start" />
			<masterindex_page_prev name="page_prev" />
			<masterindex_page_next name="page_next" />
			<masterindex_page_end name="page_end" />
			
			<genericcontrol name="rightanchor">
				<anchored to="listbottomanchor" height="20" width="0">
					<right offset="10" />
					<top anchor="bottom" relation="relative" offset="5" />
				</anchored>
			</genericcontrol>
			<button_iedit_campaign name="list_iedit" />
			<button_iadd_masterindex name="list_iadd" />
			<masterindex_filter_sharedonly name="filter_sharedonly" />
			<masterindex_filter_name name="filter_name" />
			
			<resize_referencelist />
			<helper_masterindex />
			<close_referencelist />
		</sheetdata>
	</windowclass>

	<windowclass name="cgen_header">
		<margins control="0,0,0,7" />
		<sheetdata>
			<cgen_button_genesis />
			<anchor_record_header_right />
		</sheetdata>
	</windowclass>


	<windowclass name="cgen_window">
		<frame>recordsheet</frame>
		<script file="cgen/lua/wc_CreatureGen.lua" />
		<sizelimits>
			<minimum width="500" height="600" />
		</sizelimits>
		<sheetdata>
			<sub_record_header name="header">
				<class>cgen_header</class>
			</sub_record_header>
			<frame_record_content_tabbed name="contentframe">
				<anchored>
					<bottom offset="-65" />
				</anchored>
			</frame_record_content_tabbed>
			<ft_record name="input">
				<anchored to="contentframe" position="over" />
				<invisible />
			</ft_record>
			<ft_record name="log">
				<anchored to="contentframe" position="over" />
				<invisible />
			</ft_record>
			<tabs_recordsheet>
				<tab>
					<icon>cgen_tab_input</icon>
					<subwindow>input</subwindow>
				</tab>
				<tab>
					<icon>cgen_tab_log</icon>
					<subwindow>log</subwindow>
				</tab>
			</tabs_recordsheet>

			<scrollbar_record>
				<target>input</target>
			</scrollbar_record>
			<scrollbar_record>
				<target>log</target>
			</scrollbar_record>

			<frame_record_logbar name="controlframe" />
			<radio_record_cgen_log_level name="loglevel" />

			<resize_campaignlistwithtabs/>
			<close_campaignlist/>
		</sheetdata>
	</windowclass>
</root>
